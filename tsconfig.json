{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "target": "ES5"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/!(immutable.d).ts"
    ],
    "files": [
        "./typings/tsd.d.ts",
        "./node_modules/immutable/dist/immutable.d.ts",
        "./typings/assertion-error/assertion-error.d.ts",
        "./typings/blessed.d.ts",
        "./typings/chai/chai.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./src/FreePolyomino.ts",
        "./src/OneSidedPolyomino.ts",
        "./src/Point.ts",
        "./src/PointInt.ts",
        "./src/Polyomino.ts",
        "./test/PointTest.ts",
        "./test/PolyominoTest.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
